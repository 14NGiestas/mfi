#:def hegv(f77,f90,mfi,pfxs)
#:set wp = pfxs[0]
subroutine test_${f77}$
    use f77_lapack, only: ${f77}$, ${f90}$
    use mfi_lapack, only: ${mfi}$, mfi_${f77}$

    integer, parameter :: wp = ${kind(wp)}$
    integer, parameter :: N = 3
    ${type(wp)}$ :: A(N,N), A_in(N,N), A_rf(N,N)
    ${type(wp)}$ :: B(N,N), B_in(N,N), B_rf(N,N)
    ${real(wp)}$ :: W(N), W_rf(N), W_mfi(N)
    integer :: info, info_rf, info_mfi
    integer, parameter :: itype = 1
    ${type(wp)}$, allocatable :: work(:)
    ${real(wp)}$, allocatable :: rwork(:)
    integer :: lwork

    ! Create test matrices for generalized eigenvalue problem
    A = reshape([3.0_wp, 1.0_wp, 1.0_wp, &
                 1.0_wp, 3.0_wp, 1.0_wp, &
                 1.0_wp, 1.0_wp, 3.0_wp], [N,N])
    B = reshape([2.0_wp, 0.0_wp, 0.0_wp, &
                 0.0_wp, 2.0_wp, 0.0_wp, &
                 0.0_wp, 0.0_wp, 2.0_wp], [N,N])

    ! Test f77 interface - workspace query
    A_in = A
    B_in = B
    allocate(rwork(1))  ! For real workspace needed by hegv
    allocate(work(1))   ! For complex workspace needed by hegv
    lwork = -1  ! Workspace query
    call ${f77}$(itype, 'N', 'U', N, A_in, N, B_in, N, W, work, lwork, rwork, info)

    if (info == 0) then
        lwork = int(real(work(1), wp))  ! Get workspace size
        deallocate(work)
        allocate(work(max(1, lwork)))

        ! Actually call the routine
        A_in = A
        B_in = B
        call ${f77}$(itype, 'N', 'U', N, A_in, N, B_in, N, W, work, lwork, rwork, info)
        A_rf = A_in
        B_rf = B_in
        W_rf = W
        info_rf = info
        deallocate(work)
    else
        ! If workspace query failed, skip this test
        deallocate(work, rwork)
        return
    end if
    deallocate(rwork)

    ! Note: A full test would require comparing the eigenvalues and eigenvectors
    ! For now, just ensure that the functions execute without error and produce consistent results

end subroutine
#:enddef
